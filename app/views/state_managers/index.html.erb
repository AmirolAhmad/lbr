<section role="main" class="content-body">
  <header class="page-header">
    <h2>Senarai Pengurus Negeri</h2>
    <div class="right-wrapper pull-right">
      <ol class="breadcrumbs">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home"></i>
          <% end %>
        </li>
        <li>
          <span>Senarai Pengurus Negeri</span>
        </li>
      </ol>
      <a class="sidebar-right-toggle" data-open="sidebar-right">
        <i class="fa fa-chevron-left"></i>
      </a>
    </div>
  </header>
  <div class="row">
    <div class="col-md-12">
      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">Senarai Pengurus Negeri</h2>
        </header>
        <div class="panel-body">
          <!-- Main Content Start -->
          <table class="table table-bordered table-striped mb-none" id="datatable-lbr">
            <thead>
              <tr>
                <th class="col-md-1">Bil</th>
                <th>Nama Pengguna</th>
                <th class="col-md-2">Negeri</th>
                <th class="col-md-2">Dicipta pada</th>
              </tr>
            </thead>
            <tbody>
              <% @state_managers.each_with_index do |sm,index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= sm.username %></td>
                <td><%= sm.state.name %></td>
                <td><%= sm.created_at.strftime("%d %B %Y") %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <!-- Main Content End -->
        </div>
        <div class="panel-footer">
          <%= link_to "Daftar Data Baru", new_state_manager_path, class: "btn btn-primary" %>
        </div>
      </section>
    </div>
  </div>
</section>
