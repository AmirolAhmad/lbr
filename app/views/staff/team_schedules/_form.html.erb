<% if @staff_team_schedule.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong><%= pluralize(@staff_team_schedule.errors.count, "error") %> prohibited
    this user from being saved:</strong>
    <ul>
      <% @staff_team_schedule.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
</div>
<% end %>

