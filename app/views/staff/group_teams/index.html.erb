<section role="main" class="content-body">
  <header class="page-header">
    <h2>Senarai Pasukan</h2>
    <div class="right-wrapper pull-right">
      <ol class="breadcrumbs">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home"></i>
          <% end %>
        </li>
        <li>
          <span>Senarai Pasukan bagi <%= @group.name %></span>
        </li>
      </ol>
      <a class="sidebar-right-toggle" data-open="sidebar-right">
        <i class="fa fa-chevron-left"></i>
      </a>
    </div>
  </header>
  <div class="row">
    <div class="col-md-12">
      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">Senarai Pasukan bagi <%= @group.name %></h2>
        </header>
        <div class="panel-body">
          <!-- Main Content Start -->
          <table class="table table-bordered table-striped mb-none" id="datatable-lbr">
            <thead>
              <tr>
                <th class="col-md-1">Bil</th>
                <th>Nama Pasukan</th>
                <th class="col-md-1">P</th>
                <th class="col-md-1">M</th>
                <th class="col-md-1">S</th>
                <th class="col-md-1">K</th>
                <th class="col-md-1">GM</th>
                <th class="col-md-1">GB</th>
                <th class="col-md-1">MT</th>
              </tr>
            </thead>
            <tbody>
              <% @staff_group_teams.each_with_index do |group_team,index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= group_team.team.team_name %></td>
                <td><%= group_team.perlawanan %></td>
                <td><%= group_team.menang %></td>
                <td><%= group_team.seri %></td>
                <td><%= group_team.kalah %></td>
                <td><%= group_team.gol_masuk %></td>
                <td><%= group_team.gol_bolos %></td>
                <td><%= group_team.mata %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <!-- Main Content End -->
        </div>
        <div class="panel-footer">
          <%= link_to "Daftar Pasukan", new_staff_zone_group_group_team_path, class: "btn btn-primary" %>
          <%= link_to "Kembali Ke Kumpulan", staff_zone_groups_path, class: "btn btn-default" %>
          <%= link_to "Jadual Perlawanan", staff_zone_group_team_schedules_path(group_id: @group), class: "btn btn-success pull-right" %>
        </div>
      </section>
    </div>
  </div>
</section>
