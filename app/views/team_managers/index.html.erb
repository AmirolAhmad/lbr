<section role="main" class="content-body">
  <header class="page-header">
    <h2>Senarai Pegawai Tadbir Pasukan</h2>
    <div class="right-wrapper pull-right">
      <ol class="breadcrumbs">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home"></i>
          <% end %>
        </li>
        <li>
          <span>Senarai Pegawai Tadbir Pasukan</span>
        </li>
      </ol>
      <a class="sidebar-right-toggle" data-open="sidebar-right">
        <i class="fa fa-chevron-left"></i>
      </a>
    </div>
  </header>
  <div class="row">
    <div class="col-md-12">
      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">Senarai Pegawai Tadbir Pasukan</h2>
        </header>
        <div class="panel-body">
          <!-- Main Content Start -->
          <table class="table table-bordered table-striped mb-none" id="datatable-lbr">
            <thead>
              <tr>
                <th class="col-md-1">Bil</th>
                <th>Nama Pengguna</th>
                <th>No. Telefon</th>
                <th class="col-md-2">Nama Pasukan</th>
                <th class="col-md-2">Dicipta pada</th>
              </tr>
            </thead>
            <tbody>
              <% @team_managers.each_with_index do |tm,index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= tm.profile.full_name.blank? ? tm.username : tm.profile.full_name %></td>
                <td><%= tm.profile.phone_number.blank? ? "N/A" : tm.profile.phone_number %></td>
                <td><%= tm.team_name %></td>
                <td><%= tm.created_at.strftime("%d %B %Y") %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <!-- Main Content End -->
        </div>
        <% if @total == TRUE %>
        <div class="panel-footer">
          <%= link_to "Daftar Data Pegawai Tadbir Baru", new_team_manager_path, class: "btn btn-primary" %>
        </div>
        <% end %>
      </section>
    </div>
  </div>
</section>
