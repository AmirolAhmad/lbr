<section role="main" class="content-body">
  <header class="page-header">
    <h2>Data Pegawai Pasukan</h2>
    <div class="right-wrapper pull-right">
      <ol class="breadcrumbs">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home"></i>
          <% end %>
        </li>
        <li>
          <span>Data Pegawai Pasukan</span>
        </li>
      </ol>
      <a class="sidebar-right-toggle" data-open="sidebar-right">
        <i class="fa fa-chevron-left"></i>
      </a>
    </div>
  </header>
  <div class="row">
    <div class="col-md-12">
      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">Data Pegawai Pasukan</h2>
          <p class="text-danger">Minimum pegawai pasukan mestilah tidak kurang dari 5 orang.</p>
        </header>
        <div class="panel-body">
          <%= form_tag team_team_officials_path do %>
            <% @team_official.each_with_index do |to, index| %>
              <%= fields_for 'team_officials[]', to do |f| %>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :name, "Nama Pegawai", class: "col-md-3 control-label" %>
                      <div class="col-md-9">
                        <%= f.text_field :name, :class => "form-control" %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :position, "Posisi Pegawai", class: "col-md-3 control-label" %>
                      <div class="col-md-9">
                        <% if index == 0 %>
                          <%= f.text_field :position, :class => "form-control", value: "Pengurus", disabled: "disabled" %>
                          <%= f.hidden_field :position, value: "Pengurus" %>
                        <% elsif index == 1 %>
                          <%= f.text_field :position, :class => "form-control", value: "Ketua Jurulatih", disabled: "disabled" %>
                          <%= f.hidden_field :position, value: "Ketua Jurulatih" %>
                        <% else %>
                          <%= f.text_field :position, :class => "form-control" %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :phone_number, "Nombor Telefon", class: "col-md-3 control-label" %>
                      <div class="col-md-9">
                        <%= f.text_field :phone_number, :class => "form-control" %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :ic_number, "No Kad Pengenalan", class: "col-md-3 control-label" %>
                      <div class="col-md-9">
                        <%= f.text_field :ic_number, :class => "form-control" %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :email_address, "Alamat Emel Pegawai", class: "col-md-3 control-label" %>
                      <div class="col-md-9">
                        <%= f.text_field :email_address, :class => "form-control" %>
                        <span class="help-block">
                          <small>**Tidak wajib diisi</small>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :profile_picture, "Gambar Profil", class: "col-md-3 control-label" %>
                      <div class="col-md-9">
                        <%= f.file_field :profile_picture, :class => "form-control" %>
                        <%= f.hidden_field :profile_picture_cache %>
                        <span class="help-block">
                          <small>For best result, please upload only 250px * 250px</small>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

                <% if index == 1 %>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :no_sijil, "No Sijil", class: "col-md-3 control-label" %>
                      <div class="col-md-9">
                        <%= f.text_field :no_sijil, :class => "form-control" %>
                        <span class="help-block">
                          <small>**Hanya wajib diisi jika posisi adalah Ketua Jurulatih</small>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :salinan_sijil, "Salinan Sijil", class: "col-md-3 control-label" %>
                      <div class="col-md-9">
                        <%= f.file_field :salinan_sijil, :class => "form-control" %>
                        <%= f.hidden_field :salinan_sijil_cache %>
                        <span class="help-block">
                          <small>For best result, please upload only 250px * 250px</small>
                          <small>**Hanya wajib diisi jika posisi adalah Ketua Jurulatih</small>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>

                <hr>

                <%= f.hidden_field :team_id, value: "#{current_user.team.id}" %>

              <% end %>
            <% end %>
            <div class="actions">
              <%= submit_tag "Hantar", class: "btn btn-primary" %>
            </div>
          <% end %>
          <!-- Main Content End -->
        </div>
      </section>
    </div>
  </div>
</section>
