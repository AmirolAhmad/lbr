<% if @team.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong><%= pluralize(@team.errors.count, "error") %> prohibited
    this user from being saved:</strong>
    <ul>
      <% @team.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :team_name, "Nama Pasukan", class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :team_name, :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :address, "Alamat Pasukan", class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_area :address, :class => "form-control", rows: 5 %>
  </div>
</div>

<div class="form-group">
  <%= f.label :state_id, "State", class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.collection_select :state_id, State.order(:name), :id, :name, {}, :class => "form-control", "data-plugin-selectTwo" => "data-plugin-selectTwo" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :team_logo, "Logo Pasukan", class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :team_logo, :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :team_image, "Gambar Pasukan", class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :team_image, :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-2 control-label"></label>
  <div class="col-md-10">
    <%= f.button "Save", :class => "btn btn-primary", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..." } %>
    <%#= link_to 'Cancel', articles_path, :class => "btn btn-link" %>
  </div>
</div>
