<section role="main" class="content-body">
  <header class="page-header">
    <h2>My Team</h2>
    <div class="right-wrapper pull-right">
      <ol class="breadcrumbs">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home"></i>
          <% end %>
        </li>
        <li>
          <span>My Team</span>
        </li>
      </ol>
      <a class="sidebar-right-toggle" data-open="sidebar-right">
        <i class="fa fa-chevron-left"></i>
      </a>
    </div>
  </header>
  <div class="row">
    <div class="col-md-12">
      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">My Team</h2>
        </header>
        <div class="panel-body">
          <!-- Main Content Start -->
          <table class="table table-bordered">
            <thead>
              <tr></tr>
            </thead>
            <tbody>
              <tr>
                <td class="col-md-2"><strong>Nama Pasukan</strong></td>
                <td><%= @team.team_name %></td>
              </tr>
              <tr>
                <td class="col-md-2"><strong>Pasukan ID</strong></td>
                <td><%= @team.team_ref_id %></td>
              </tr>
              <tr>
                <td class="col-md-2"><strong>Status</strong></td>
                <td>
                  <% if @team.pending? %>
                    Pending
                  <% elsif @team.registered? %>
                    Registered
                  <% else %>
                    Rejected
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
          <!-- Main Content End -->
        </div>
      </section>
    </div>
  </div>
</section>
