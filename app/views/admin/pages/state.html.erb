<section role="main" class="content-body">
  <header class="page-header">
    <h2>Senarai Pasukan</h2>
    <div class="right-wrapper pull-right">
      <ol class="breadcrumbs">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home"></i>
          <% end %>
        </li>
        <li>
          <span>Senarai Pasukan</span>
        </li>
      </ol>
      <a class="sidebar-right-toggle" data-open="sidebar-right">
        <i class="fa fa-chevron-left"></i>
      </a>
    </div>
  </header>
  <div class="row">
    <div class="col-md-12">
      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">Senarai Pasukan bagi Negeri <%= @state.name %></h2>
        </header>
        <div class="panel-body">
          <!-- Main Content Start -->
          <table class="table table-bordered table-striped mb-none" id="datatable-lbr">
            <thead>
              <tr>
                <th class="col-md-1">Bil</th>
                <th class="col-md-4">Nama Pasukan</th>
                <th class="col-md-2">ID Pasukan</th>
                <th class="col-md-2">Jumlah Pemain</th>
                <th class="col-md-2">Jumlah Pegawai</th>
              </tr>
            </thead>
            <tbody>
              <% @teams.each_with_index do |team,index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= team.team_name.upcase %></td>
                <td><%= team.team_ref_id %></td>
                <td><%= TeamPlayer.where(team: team).count %></td>
                <td><%= TeamOfficial.where(team: team).count %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <!-- Main Content End -->
        </div>
        <div class="panel-footer">
          <%= link_to "Senarai Semua Pemain", admin_team_player_state_index_path, class: "btn btn-primary" %>
          <%= link_to "Senarai Semua Pegawai", admin_team_official_state_index_path, class: "btn btn-default" %>
          <%= link_to "Kembali", admin_pages_path, class: "btn btn-default pull-right" %>
        </div>
      </section>
    </div>
  </div>
</section>
