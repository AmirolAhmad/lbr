<section role="main" class="content-body">
	<header class="page-header">
		<h2>Profil Saya</h2>

		<div class="right-wrapper pull-right">
			<ol class="breadcrumbs">
				<li>
					<%= link_to root_path do %>
						<i class="fa fa-home"></i>
					<% end %>
				</li>
				<li><span>Profil Saya</span></li>
			</ol>

			<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
		</div>
	</header>

  <div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
						<a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
					</div>

					<h2 class="panel-title">Kemaskini Profil</h2>
				</header>
				<div class="panel-body">
					<%= form_for @user, url: profile_path, html: { multipart: true, method: :patch, class: "form-horizontal form-bordered" } do |f| %>

            <% if @user.errors.any? %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <strong><%= pluralize(@user.errors.count, "error") %> prohibited
                this user from being saved:</strong>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                  <% end %>
                </ul>
            </div>
            <% end %>

            <%= f.fields_for :profile_attributes, @user.profile do |profile| %>

              <div class="form-group">
                <%= profile.label :full_name, "Nama Penuh", class: "col-md-3 control-label" %>
                <div class="col-md-6">
                  <%= profile.text_field :full_name, :class => "form-control", placeholder: "John Doe", required: true %>
                </div>
              </div>

              <div class="form-group">
                <%= profile.label :ic_number, "No Kad Pengenalan", class: "col-md-3 control-label" %>
                <div class="col-md-6">
                  <%= profile.text_field :ic_number, :class => "form-control", placeholder: "860704236233", required: true %>
                </div>
              </div>

              <div class="form-group">
                <%= profile.label :phone_number, "No Telefon", class: "col-md-3 control-label" %>
                <div class="col-md-6">
                  <%= profile.text_field :phone_number, :class => "form-control", placeholder: "0195151888", required: true %>
                </div>
              </div>

            <% end %>
        </div>
        <div class="panel-footer">

            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-md-6">
                <%= f.button "Simpan", :class => "btn btn-primary", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating..." } %>
                <%= link_to 'Batal', dashboard_path, :class => "btn btn-link" %>
              </div>
            </div>

          <% end %>
        </div>
      </section>
    </div>
  </div>
</section>
